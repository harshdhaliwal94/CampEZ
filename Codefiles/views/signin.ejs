<% include partials/header %>
<div class="container">
   
    <div class="row">
       
        <div style="width: 30%; margin: 25px auto;">
            <h4 style="text-align: center"><%=msg%></h1>
            <% if(typeof resendToken !== 'undefined'){ %>
                <a href="resendtoken"><h4 style="text-align: center"> click to resend verification email </h4></a>
            <% } %>
             <h1 style="text-align: center">Log In !</h1>
            <form action="/checksignin" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username" required="true">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" required="true">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Log In</button>
                    <a href = "forgot"><h4 style="text-align: center"><font color="black">Forgot Password!</font></h4></a>
                </div>
            </form>
            <a href="/camplist" class="text-dark"><i class="fas fa-arrow-circle-left fa-3x" size:9x></i></a>
        </div>
    </div>
</div>
<% include partials/footer %>