<% include partials/header %>
<div class="container">
    <div class="row">
       
        <div style="width: 30%; margin: 25px auto;">
             <h1 style="text-align: center">Add Comments to <%=camp.name%> </h1>
            <form action="/comments/add/<%= camp._id %>" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="comments"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="hidden" name="comment[author]" placeholder="author" value="<%= loggedUser.username %>" readonly="true">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add comment</button>
                </div>
            </form>
            <a href="/campinfo?id=<%= camp._id %>">Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

