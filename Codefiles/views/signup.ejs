<% include partials/header %>
<div class="container">
    <div class="row">
       
        <div style="width: 30%; margin: 25px auto;">
            <h4 style="text-align: center"><%=msg%></h1>
             <h1 style="text-align: center">Sign Up !</h1>
            <form action="/adduser" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username" required="true">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email-ID" required="true">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" required="true">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="adminCode" placeholder="Admin code">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Sign Up</button>
                </div>
                
            </form>
           <a href="/camplist" class="text-dark"><i class="fas fa-arrow-circle-left fa-3x" size:9x></i></a>
        </div>
    </div>
</div>
<% include partials/footer %>

